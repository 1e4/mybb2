{% extends "layouts.base" %}
{% block title %}
	{{ trans('member.online') }}
{% endblock %}
{% block contents %}
<div class="page-content">
	<header>
		<h1>{{ trans('member.online') }}</h1>
	</header>
	{{ users.render|raw }}
	<section class="user-list online-now container">
		{% for user in users %}
			<div class="user-list__user">
				<a href="index.php?page=profile" class="avatar-profile-link"><img src="{{ user.avatar }}" class="avatar" /></a>
				<h3 class="user-list__user__username"><a href="#">{{ user.styled_name|raw }}</a></h3>
				<p class="user-list__user__date">{{ generate_time(user.last_visit) }}</p>
				<p class="user-list__user__activity">{{ user.last_page|raw }}</p>
			</div>
		{% else %}
			<div class="user-list__error error error-no-results">{{ trans('member.noOnline') }}</div>
		{% endfor %}
	</section>
	{{ users.render|raw }}
</div>
{% endblock %}