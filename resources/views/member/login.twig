{% extends "layouts.base" %}
{% block title %}
	{{ trans('member.login') }}
{% endblock %}
{% block contents %}
		{% if errors.any %}
			<div class="alert alert-danger">
				<strong>Whoops!</strong> There were some problems with your input.<br><br>
				<ul>
					{% for error in errors.all %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
		<form action="{{ url('auth/login') }}" method="post">
		<article class="centered-full-width">
			<header>
				<h1>{{ trans('member.login') }}</h1>
			</header>
			<section class="form">
				<div class="form-section clearfix">
					<div class="form-row">
						<h3><label for="username">{{ trans('member.UsernameOrEmail') }}</label></h3>
						<input type="text" name="username" id="username" value="{{ input_old('username') }}" />
					</div>
					<div class="form-row">
						<h3><label for="password">{{ trans('member.password') }}</label></h3>
						<p class="description"><a href="{{ url('password/email') }}" onclick="modal('forgot-password'); return false;">{{ trans('member.forgotpassword') }}</a></p>
						<input type="password" name="password" id="password" class="password-toggle" />
					</div>
					<div class="form-row">
						<input type="checkbox" name="remember_me" id="remember_me" checked="checked" /> <label for="remember_me">{{ trans('member.remember_me') }}</label>
					</div>
				</div>
			</section>
			<div class="form-submit">
				<button type="submit" class="button"><i class="fa fa-sign-in"></i><span class="text">{{ trans('member.login') }}</span></button>
			</div>
		</article>
		<input type="hidden" name="_token" value="{{ csrf_token() }}">
	</form>
{% endblock %}