{% extends "layouts.base" %}
{% block title %}
	{{ trans('member.login') }}
{% endblock %}
{% block contents %}
		{% if errors.any %}
			<div class="alert alert-danger">
				<strong>Whoops!</strong> There were some problems with your input.<br><br>
				<ul>
					{% for error in errors.all %}
						<li>{{ error }}</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
    {{ form_open({'url': ['auth/login'], 'method': 'post'}) }}
		<article class="centered-full-width">
			<header>
				<h1>{{ trans('member.login') }}</h1>
			</header>
			<section class="form">
				<div class="form-section clearfix">
					<div class="form-row">
                        <h3>{{ form_label('username', trans('member.UsernameOrEmail')) }}</h3>
                        {{ form_text('username') }}
					</div>
					<div class="form-row">
						<h3>{{ form_label('password', trans('member.password')) }}</h3>
						<p class="description"><a href="{{ url('password/email') }}" onclick="modal('password/email'); return false;">{{ trans('member.forgotpassword') }}</a></p>
                        {{ form_password('password', {'class': 'password-toggle'}) }}
					</div>
					<div class="form-row">
                        {{ form_checkbox('remember_me', 1, true) }} {{ form_label('remember_me', trans('member.remember_me')) }}
					</div>
				</div>
			</section>
			<div class="form-submit">
                {{ form_button('<i class="fa fa-sign-in"></i><span class="text">'~trans('member.login')~'</span>', {'type': 'submit', 'class': 'button'}) }}
			</div>
		</article>
    {{ form_close() }}
{% endblock %}