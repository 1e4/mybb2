{% extends "layouts.base" %}
{% block title %}
	{{ trans('member.members') }}
{% endblock %}
{% block contents %}
<article class="full-width">
	<header>
		<h1>{{ trans('member.members') }}</h1>
	</header>
	<section>
		<div class="user-list clearfix">
			{% for user in users %}
				<div class="user">
					<a href="index.php?page=profile" class="avatar-profile-link"><img src="{{ asset('images/avatar.png') }}" class="avatar" /></a>
					<h3 class="username"><a href="index.php?page=profile">{{ user.name }}</a></h3>
					{# <h4 class="usertitle">Imitate and water down</h4>
					<span class="team-badge"><i class="fa fa-question-circle" style="color: #f00;"></i><span class="text">MyBB Staff</span></span>#}
					<dl class="user-statistics stats">
						{# <dt>{{ trans('member.posts') }}</dt>
						<dd>1,565</dd> #}
						<dt>{{ trans('member.joinDate') }}</dt>
						<dd>{{ user.created_at }}</dd>
						<dt>{{ trans('member.lastVisit') }}</dt>
						<dd>{{ user.updated_at }}</dd>
					</dl>
				</div>
			{% endfor %}
		</div>
	</section>
	{{ users.render|raw }}
</article>
{% endblock %}