{% extends "layouts.base" %}
{% block title %}
    {{ trans('passwords.resetpw') }}
{% endblock %}
{% block contents %}
    {% if session_has('status') %}
        <div class="alert alert-success">
            {{ session_get('status') }}
        </div>
    {% endif %}

    {% if errors.any %}
        <div class="alert alert-danger">
            <strong>Whoops!</strong> There were some problems with your input.<br><br>
            <ul>
                {% for error in errors.all %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    {{ form_open({'url': ['password/email'], 'method': 'post'}) }}
        <div class="page-content page-content--centered">

            <header>
                <h1>{{ trans('passwords.resetpw') }}</h1>
            </header>

            <section class="form">
                <div class="form__section">
                    <div class="form__row">
                        <h3>{{ form_label('email', trans('member.email')) }}</h3>
                        {{ form_text('email') }}
                    </div>
                </div>
            </section>

            <div class="form__submit">
                {{ form_button('<i class="fa fa-key"></i><span class="text">'~trans('general.reset')~'</span>', {'type': 'submit', 'class': 'button'}) }}
            </div>
        </div>
    {{ form_close() }}
{% endblock %}