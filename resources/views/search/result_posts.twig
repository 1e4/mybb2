{% extends "layouts.base" %}
{% block title %}
	{{ trans('search.results') }}
{% endblock %}
{% block contents %}
<div class="page-content">
	<header>
		<h1>{{ trans('search.results') }}</h1>
	</header>
	{# TODO: I need some prototypes for it... #}
	<section class="forum topic-list">
		{{ results.render|raw }}
			{% for post in results %}
				<h3><a href="{{ url_route('topics.showPost', [post.topic.slug, post.topic.id, post.id]) }}">{{ post.topic.title }}</a></h3>
				{{ str_limit(post.content_parsed|striptags, 200) }}
				<hr>
			{% endfor %}
		</div>
		{{ results.render|raw }}
	</section>
</div>
{% endblock %}