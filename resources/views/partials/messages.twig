{% if errors.any %}
	<div class="alert alert--danger">
		{{ trans('errors.inline_error') }}<br />
		<ul>
			{% for error in errors.all %}
				<li>{{ error }}</li>
			{% endfor %}
		</ul>
	</div>
{% endif %}

{% if session_has('success') %}
	<div class="alert alert--success">
		{{ session_get('success') }}
	</div>
{% endif %}