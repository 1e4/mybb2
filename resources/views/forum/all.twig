{% extends "layouts.base" %}
{% block title %}
	{{ trans('forum.allforums') }}
{% endblock %}
{% block contents %}
<div class="page-content">
    <header>
        <h1>{{ trans('forum.allforums') }}</h1>
    </header>
    {% for category in forums %}
		<section>
			<h2 class="heading heading--major">{{ category.title }}</h2>
			 <div class="forum-list topic-list">
				{% for forum in category.children.toTree %}
					<div class="forum">
						<div class="forum-info">
							<h3 class="forum-title"><a href="{{ url_route("forums.show", [forum.slug, forum.id]) }}">{{ forum.title }}</a></h3>
							<p class="description">{{ forum.description }}</p>
							{% if forum.children.toTree %}
								<ul class="subforums">
									<i class="fa fa-level-up"></i>
									{% for subforum in forum.children.toTree %}
										<li><a href="{{ url_route("forums.show", [subforum.slug, subforum.id]) }}" class="subforum-title">{{ subforum.title }}</a></li>
									{% endfor %}
								</ul>
							{% endif %}
						</div>
						<div class="topic compact">
							<a href="" class="avatar-profile-link" title="Go to Nemo Hoes's profile"><img src="{{ forum.lastPostAuthor.avatar }}" class="avatar" /></a>
							<h4 class="topic-title"><a href="{{ url_route("topics.show", [forum.lastPost.topic.slug, forum.lastPost.topic.id]) }}">{{ forum.lastPost.topic.title }}</a></h4>
							<p class="latest-post"><a href="{{ url_route("topics.last", [forum.lastPost.topic.slug, forum.lastPost.topic.id]) }}" class="post-date" title="March 8, 2014 at 12:07 PM">{{ forum.lastPost.created_at }}</a> {{ trans('general.by') }} <a href="" class="post-author">{{ forum.lastPostAuthor.name }}</a></p>
						</div>
					</div>
				{% endfor %}
			</div>
		</section>
	{% endfor %}
</div>
{% endblock %}
