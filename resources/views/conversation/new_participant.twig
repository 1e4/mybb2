{% extends "layouts.base" %}
{% block title %}Conversations{% endblock %}
{% block contents %}
    <div class="page-content">
        <header>
            <h1>{{ conversation.title }} - New Participant</h1>
        </header>

        {{ form_open({'route': ['conversations.newParticipant', conversation.id], 'method': 'post'}) }}
        <section class="form">
            <div class="form__section">
                <div class="form__row">
					<h3>{{ form_label('participants', 'Participants') }}</h3>
					(Comma seperated list of usernames)
					{# TODO: some sort of autocomplete #}
					{{ form_text('participants') }}
                </div>
            </div>
        </section>
        <div class="form__submit">
            {{ form_button('<i class="fa fa-plus"></i><span class="text">Add Participant</span>', {'type': 'submit', 'class': 'button'}) }}
        </div>
        {{ form_close() }}

    </div>
{% endblock %}
