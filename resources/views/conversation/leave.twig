{% extends "layouts.base" %}
{% block title %}Conversations{% endblock %}
{% block contents %}
    <div class="page-content">
        <header>
            <h1>{{ conversation.title }} - Leavve</h1>
        </header>

        {{ form_open({'route': ['conversations.leave', conversation.id], 'method': 'post'}) }}
        <section class="form">
            <div class="form__section">
                <div class="form__row">
                    <h3>Leave conversation</h3>

                    {{ form_radio('leave', 'leave', true, {'id': 'leave'}) }}
                    {{ form_label('leave', 'This will hide the conversation but you will still get notifications if new answers are added') }}
                </div>
                <div class="form__row">
                    <h3>Ignore conversation</h3>

                    {{ form_radio('leave', 'ignore', false, {'id': 'ignore'}) }}
                    {{ form_label('ignore', 'This will ignore the conversation and you won\'t get notifications if new answers are added') }}
                </div>
            </div>
        </section>
        <div class="form__submit">
            {{ form_button('<i class="fa fa-sign-out"></i><span class="text">Leave</span>', {'type': 'submit', 'class': 'button'}) }}
        </div>
        {{ form_close() }}

    </div>
{% endblock %}
