{% extends "layouts.admin" %}
{% block title %}{% endblock %}
{% block contents %}
    <div class="admin-body__header">
        <h1 class="admin-body__header__title">{{ trans('admin::profile_fields.edit_field') }}</h1>
    </div>
    <div class="admin-body__content">
        {{ form_open({'route': ['admin.users.profile_fields.edit', field.id], 'method': 'post'}) }}
        {% include "admin.partials.users.profile_field_form" with [field] %}
        {{ form_close() }}
    </div>

    <div class="admin-body__content">
        {{ form_open({'route': ['admin.users.profile_fields.test'], 'method': 'post'}) }}
        {{ form_hidden('profile_field_id', field.id) }}

        <h2>{{ trans('admin::profile_fields.edit_preview') }}</h2>
        <section class="form block">
            <div class="form__section">
                <div class="form__row">
                    {{ form_render_field(field) }}
                </div>
            </div>
        </section>
        {{ form_close() }}
    </div>
{% endblock %}
