{% extends "layouts.admin" %}
{% block title %}{{ trans('admin::users.edit_title') }}{% endblock %}
{% block contents %}
    <div class="admin-body__header">
        <h1 class="admin-body__header__title">{{ trans('admin::users.edit_title') }}</h1>
    </div>
    <div class="admin-body__content">
        {{ form_open({'route': ['admin.users.edit', user.id], 'method': 'post'}) }}
        {% include "admin.partials.users.user_form" with [user] %}
        {{ form_close() }}
    </div>
{% endblock %}
