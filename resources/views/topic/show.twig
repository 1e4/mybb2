<head>
    <title>{{ topic.title }} &bull; MyBB Community Forums</title>
    {% include "partials.headerinclude" %}
    <meta name="description" content="{{ str_limit(topic.firstPost.content, 255) }}" />
    <link rel="canonical" href="{{ url_route("topics.show", [topic.slug]) }}" />
</head>
<body>
{% include "header.header" %}
<div class="main-container">
    <div class="main wrapper clearfix">
        <div class="breadcrumb">
            Breadcrumb Goes here
        </div>
        <section class="topic">
            <header class="topic__details">
                <h1>{{ topic.title }}</h1>
                Created by {{ topic.author.name }} on {{ topic.created_at }}
            </header>

            <div class="topic__posts">
                {% for post in posts %}
                    <article class="post">
                        <header class="post__details">
                            <div class="author">
                                {{ post.author.name }}
                            </div>
                        </header>

                        <div class="post__content">
                            {{ post.content }}
                        </div>
                    </article>
                {% endfor %}
            </div>
        </section>

        <aside>
            <section>
                <h3 class="linked-header"><a href="index.php?page=all-forums">All Forums</a></h3>

                <div class="compressed-forum-list">
                    {% for category in forums %}
                        <div class="category">
                            <h4><a href="{{ url_route("forums.show", [forum.slug]) }}">{{ category.title }}</a></h4>
                            <ul class="forum-list">
                                {% for forum in category.children.toTree %}
                                    <li><a href="{{ url_route("forums.show", [forum.slug]) }}">{{ forum.title }}</a></li>
                                {% else %}
                                    {#Do nothing, no subforums for this category#}
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        No Forums Found!
                    {% endfor %}
                </div>
            </section>
            <section>
                <h3 class="linked-header"><a href="index.php?page=online">Online Now <span class="count">14 <i class="fa fa-angle-right"></i></span></a></h3>
