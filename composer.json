{
	"name": "mybb/core",
	"description": "MyBB 2.0 Core.",
	"keywords": ["mybb", "forum", "laravel"],
	"license": "LGPL3",
	"type": "project",
	"require": {
		"laravel/framework": "~5.0",
		"rcrowe/twigbridge": "~0.7",
	  	"mccool/laravel-auto-presenter": "~3.0@beta",
	  	"kalnoy/nestedset": "~2.0",
	  	"illuminate/html": "~5.0",
	  	"mybb/auth": "dev-master",
	  	"mybb/parser": "dev-master",
		"davejamesmiller/laravel-breadcrumbs": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
	  "barryvdh/laravel-debugbar": "~2.0@dev"
	},
	"repositories": [
		{
			"type": "vcs",
			"url":  "git@github.com:mybb/auth.git"
		},
		{
			"type": "vcs",
			"url":  "git@github.com:mybb/parser.git"
		}
    ],
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"MyBB\\Core\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
  	"prefer-stable": true,
	"minimum-stability": "dev",
  	"config": {
		"vendor-dir": "vendor"
  	}
}
